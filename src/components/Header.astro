<script>
  if (typeof window !== 'undefined') {
    /* ───── 1. Symbols for the visual shuffle ───── */
    const symbolSets = [
      ['∴', '⊗', '(>_<)', 'Ξ', '???', '/\\/\\'],
      ['Δ', '⟁', '∿', 'NULL', '{-_-}', '[o_o]'],
      ['Ψ', 'λ', '(°□°)', '!!!', '404', '|_|'],
      ['Ω', '∞', '§', 'end', '<^_^>', '[+++]']
    ];

    /* ───── 2. All internal pages the nav may point to ───── */
    const pagePool = [
      '/',                // home
      '/index',
      '/newtab',
      '/wildcarder',
      // '/blog',
      // '/about',
      // '/contact'
      // add /anything-else you build later
    ];

    /* ───── 3. Wire it up ───── */
    document.addEventListener('DOMContentLoaded', () => {
      document.querySelectorAll('.chaotic-link').forEach((el, idx) => {
        let i = 0;
        const randomPage = () =>
          pagePool[Math.floor(Math.random() * pagePool.length)];

        /* give each link an initial random destination */
        el.href = randomPage();

        setInterval(() => {
          /* rotate the glyph */
          i = (i + 1) % symbolSets[idx].length;
          el.textContent = symbolSets[idx][i];

          /* rotate the destination, too */
          el.href = randomPage();
        }, 900 + Math.random() * 500);
      });
    });
  }
</script>

<style>
  .glitch-header {
    position: relative;
    font-size: 2rem;
    font-weight: bold;
    color: #1b91d6;
    font-family: monospace;
    text-transform: lowercase;
    white-space: nowrap;
    overflow: hidden;
  }

  .glitch-header::before,
  .glitch-header::after {
    content: attr(data-glitch);
    position: absolute;
    left: 0;
    width: 100%;
    pointer-events: none;
    mix-blend-mode: lighten;
    opacity: 0.5;
  }

  .glitch-header::before {
    color: #ff00c8; /* neon pink */
    animation: glitch-left 2s infinite ease-in-out;
  }

  .glitch-header::after {
    color: #00ffff; /* neon cyan */
    animation: glitch-right 1.5s infinite ease-in-out;
  }


  @keyframes glitch-left {
    0%, 100% { transform: translate(0, 0); }
    25% { transform: translate(-2px, -1px); }
    50% { transform: translate(1px, 2px); }
    75% { transform: translate(-1px, 1px); }
  }

  @keyframes glitch-right {
    0%, 100% { transform: translate(0, 0); }
    25% { transform: translate(2px, 1px); }
    50% { transform: translate(-1px, -2px); }
    75% { transform: translate(1px, -1px); }
  }
</style>

