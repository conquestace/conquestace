<script>
  if (typeof window !== 'undefined') {
    const footers = [
      '© 2025 Project ConquestAce. All rights reserved.',
      '© ☠ Conquest▲ce [Encrypted]',
      '© #$!& Project_C0nquest∆ce',
      '© 🜃🜁🜂🜄 Project ⟁ Ω Ψ Ξ',
