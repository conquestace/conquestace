---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import TerminalOverlay from '../components/TerminalOverlay.astro';
---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Project ConquestAce</title>
    
  </head>
  <body class="min-h-screen bg-midnight text-softgray font-sans flex flex-col">
    <Header />
    <main class="flex-1 container mx-auto px-6 py-8">
      <slot />
      <img
  src="/glitchtiger.gif"
  alt=""
  class="fixed top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2
         w-[25vmin] max-w-none h-auto opacity-10
         pointer-events-none -z-10 select-none"
  loading="lazy"
/>
    </main>
    <TerminalOverlay />
    <Footer />
  </body>
</html>

